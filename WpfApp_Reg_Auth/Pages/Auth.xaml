<Page x:Class="WpfApp_Reg_Auth.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp_Reg_Auth.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock HorizontalAlignment="Center">Авторизация</TextBlock>
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    <TextBlock HorizontalAlignment="Center">Логин</TextBlock>
                    <TextBox Name="LoginTB" ></TextBox>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock HorizontalAlignment="Center">Пароль</TextBlock>
                    <TextBox Name="PassowrdTB"></TextBox>
                </StackPanel>
            </StackPanel>
            <Button Name="EnterBTN" Click="EnterBTN_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
